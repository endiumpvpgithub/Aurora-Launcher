{
  "name": "@aurora/core",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "Core (headless) pour un launcher Minecraft : auth, versions, java, launch, remote config.",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@xmcl/core": "^2.15.1",
    "@xmcl/installer": "^6.1.2",
    "env-paths": "^3.0.0",
    "zod": "^4.1.5",
    "extract-zip": "^2.0.1",
    "tar": "^7.5.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "@types/node": "^22.10.5"
  }
}

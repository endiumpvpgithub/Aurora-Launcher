{
  "name": "@aurora/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Application desktop Electron (UI) du launcher Aurora.",
  "main": ".electron/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:core\" \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:electron\"",
    "dev:core": "npm run -w @aurora/core dev",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json -w --preserveWatchOutput",
    "dev:preload": "tsc -p tsconfig.preload.json -w --preserveWatchOutput",
    "dev:electron": "wait-on http://localhost:5173 && wait-on file:.electron/main/index.js && wait-on file:../../packages/core/dist/index.cjs && node ../../scripts/run-electron-dev.mjs",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "typecheck": "tsc -p tsconfig.renderer.json --noEmit",
    "dist": "npm run build && electron-builder --publish never"
  },
  "dependencies": {
    "@aurora/core": "0.1.0",
    "electron-updater": "^6.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "electron": "^34.2.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^6.0.11",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.aurora.launcher",
    "productName": "Aurora Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/renderer/**",
      ".electron/**",
      "package.json"
    ],
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
